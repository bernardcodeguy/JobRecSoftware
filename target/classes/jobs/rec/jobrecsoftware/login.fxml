<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="600.0" minWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jobs.rec.jobrecsoftware.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="JOB">
               <font>
                  <Font name="ABeeZee Regular" size="43.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="REC">
               <font>
                  <Font name="ABeeZee Regular" size="19.0" />
               </font>
               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Semantic Job Recommendations">
         <font>
            <Font name="ABeeZee Regular" size="19.0" />
         </font>
      </Text>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LOG IN PAGE">
         <font>
            <Font name="ABeeZee Regular" size="25.0" />
         </font>
      </Text>
      <TextField fx:id="tfEmail" focusTraversable="false" maxWidth="300.0" minWidth="300.0" promptText="Email" text="\@gmail.com" />
      <PasswordField fx:id="pfPassword" focusTraversable="false" maxWidth="300.0" minWidth="300.0" promptText="Password" />
      <Button fx:id="btnLogIn" focusTraversable="false" maxWidth="300.0" minWidth="300.0" mnemonicParsing="false" text="Log In" />
      <Hyperlink fx:id="hlSignUp" text="SignUp?" />
      <Text fx:id="txtMessage" strokeType="OUTSIDE" strokeWidth="0.0">
         <font>
            <Font name="ABeeZee Regular" size="15.0" />
         </font>
      </Text>
   </children>
</VBox>
